<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkChronicle.SecondPage"
             Title="Work Chronicle">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label x:Name="ResultsLabel" FontSize="Medium" TextColor="Black" />

            <CollectionView x:Name="ShiftCollectionView"
                    ItemsSource="{Binding Shifts}"
                    SelectionMode="Multiple"
                    SelectionChanged="OnShiftSelectionChanged"
                    ItemsUpdatingScrollMode="KeepScrollOffset">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="8" Orientation="Horizontal">
                            <Label Text="{Binding .}" TextColor="Black" FontSize="14" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label x:Name="HoursLabel" FontSize="Medium" TextColor="Black"/>

            <Button x:Name="RemoveShiftButton" 
                Text="Remove Shift" 
                Clicked="RemoveShiftClicked" />

            <Button Text="Go Back" Clicked="OnGoBackButtonClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>