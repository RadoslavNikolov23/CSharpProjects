<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkChronicle.MainPage"
             Title="Welcome to Work Chronicle">
    
  <StackLayout Padding="20" Spacing="30">
      
        <Label x:Name="ChoiseLabel" Text="Choise one of the options:" TextColor="Black" FontSize="Medium"/>

        <Button Text="View saved schedules" Clicked="ViewSavedSchedules"/>

        <Button Text="Pick a new schedule" Clicked="PickNewSchedule"/>

        <Button Text="Exit" Clicked="ExitApp"/>
      
    </StackLayout>
</ContentPage>
