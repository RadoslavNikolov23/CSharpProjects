<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkChronicle.SecondPage"
             Title="Work Chronicle">
    <StackLayout Padding="20" Spacing="20">
        
        <Label x:Name="ResultsLabel" FontSize="Medium" TextColor="DarkBlue" />
        <CollectionView x:Name="ShiftListView" />

        <Button Text="Remove Shift" Clicked="RemoveShiftClicked" />

        <Button Text="Go Back" Clicked="OnGoBackButtonClicked" />

    </StackLayout>
</ContentPage>