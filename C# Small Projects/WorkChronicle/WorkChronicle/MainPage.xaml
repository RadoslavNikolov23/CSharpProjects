<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkChronicle.MainPage"
             Title="Work Chronicle">

    <VerticalStackLayout  Padding="20" Spacing="20">
        <Label Text="Select a date from the calendar"
               FontSize="18"
               HorizontalOptions="Start" />

        <DatePicker x:Name="MyDatePicker"
                    Format="D"
                    DateSelected="OnDateSelected"
                    HorizontalOptions="Center" />

        <Label x:Name="SelectedDateLabel"
               Text="Selected Date: none"
               FontSize="16"
                HorizontalOptions="Center" />

        <Button Text="Calculate work shifts"
                Clicked="CalculedWordShifts"
                HorizontalOptions="Center" />


    </VerticalStackLayout>

</ContentPage>
