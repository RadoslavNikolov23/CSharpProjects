<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkChronicle.MainPage"
             Title="WorkChronicle">
    
  <StackLayout Padding="20" Spacing="20">


        <Label Text="Select the starting day of your work cycle:" FontSize="Medium" />
        <DatePicker x:Name="StartDatePicker" />


        <Label Text="Enter shift cycle pattern: (Day-Night-Off-Off):" FontSize="Medium" />
        <Entry x:Name="CycleEntry" Placeholder="Day-Night-Off-Off" />

        <Button Text="Calculate Shifts" Clicked="OnCalculateShiftsClicked" />

        <Label x:Name="ResultsLabel" FontSize="Medium" TextColor="Blue" />
        <CollectionView x:Name="ShiftListView" />

    </StackLayout>
</ContentPage>
